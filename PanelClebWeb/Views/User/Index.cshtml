@using EntityLayer.Concrete
@model List<AdminUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 mt-2">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="card-title">Kullanıcılar</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-success" href="/User/Create" style="width:150px;">Ekle</a>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>İsim Soyisim</th>
                        <th>Kullanıcı Adı</th>
                        <th>Email</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.UserName</td>
                            <td>
                               @item.Email
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/User/Edit/@item.Id">Düzenle</a>
                                <a class="btn btn-danger" href="/User/Delete/@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


