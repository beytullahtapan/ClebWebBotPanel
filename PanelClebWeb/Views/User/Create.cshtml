@model PanelClebWeb.Models.UserRegisterViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 mt-2">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="card-title">Kullanıcı ekle</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-primary" href="/User/" style="width:150px;">Geri</a>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <form method="post" action="/User/Create/">
                <div class="row m-2">
                    <div class="col-md-6">
                        <label class="form-control">İsim Soyisim:</label>
                        <input class="form-control" type="text" name="FullName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-control">Kullanıcı adı:</label>
                        <input class="form-control" type="text" name="Username" />
                    </div>
                    <div class="col-md-6 mt-2">
                        <label class="form-control">Email:</label>
                        <input class="form-control" type="text" name="Email" />
                    </div>
                    <div class="col-md-6 mt-2">
                        <label class="form-control">Şifre:</label>
                        <input class="form-control" type="password" name="Password" />
                    </div>
                    <div class="col-md-12 mt-2 text-center">
                        <button type="submit" class="btn btn-success btn-l" style="width:150px;">Ekle </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


