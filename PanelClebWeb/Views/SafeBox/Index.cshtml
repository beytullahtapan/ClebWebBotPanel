@using EntityLayer.Concrete
@model List<SafeBox>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 mt-2">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h3 class="card-title">Kasalar</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a class="btn btn-success" href="/SafeBox/Create" style="width:150px;">Ekle</a>
                </div>
            </div>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kasa adı</th>
                        <th>Kasa Para Durumu</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.SafeBoxName</td>
                            <td>@item.SafeBoxAmount ₺</td>
                            <td>
                                <a class="btn btn-primary" href="/SafeBox/Edit/@item.Id">Düzenle</a>
                                <a class="btn btn-danger" href="/SafeBox/Delete/@item.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

